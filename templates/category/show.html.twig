{% extends 'base.html.twig' %}

{% block title %}Catégorie | {{ category.name }}{% endblock %}

{% block body %}
  <div class="container mtCategory w-75">
    <h1 class="h3 font-weight-normal text-center mb-3">Catégorie</h1>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ category.description }}</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
      <a class="btn btn-md btn-secondary" href="{{ path('category_index') }}"><i class="bi bi-arrow-return-left"></i></a>
      <a class="btn btn-md btn-warning" href="{{ path('category_edit', {'id': category.id}) }}"><i class="bi bi-pencil"></i></a>
      {{ include('category/_delete_form.html.twig') }}
    </div>
  </div>
{% endblock %}
